---
import BrandWrapper from "@/components/brand-wrapper.astro";
import CommunityHead from "@/components/community-hub/head/community-head.astro";
import Button from "@/components/ui/button.astro";
import GradientHead from "@/components/ui/gradient-head.astro";
import RoundedNav from "@/components/ui/nav/rounded-nav.astro";
import Seperator from "@/components/ui/seperator.astro";
import { Brand_Resources } from "@/consts";
import { brandandresources } from "@/data/links/workspaces";
import MainLayout from "@/layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const { brand } = Brand_Resources;
---

<BrandWrapper>
  <div
    class="flex flex-col rounded-small bg-sky px-5 py-3 md:rounded-3xl lg:rounded-5xl lg:p-5"
  >
    <div class="flex flex-col-reverse pb-10 md:py-10 lg:flex-row lg:gap-10">
      <div class="flex flex-1 flex-col gap-4">
        <div>
          <small
            class="font-zinc-400 font-os text-xs font-light uppercase lg:text-sm"
          >
            {brand.label}
          </small>
          <h1 class="mt-1 text-lg font-medium md:text-2xl lg:text-3xl">
            {brand.title}
            <br class="hidden lg:block" /><span class="text-primary">
              {brand.subTitle}
            </span>
          </h1>
        </div>
        <p class="text-xs font-light md:text-sm lg:text-base">
          {brand.description}
        </p>
      </div>
      <div class="flex flex-1 px-5 py-14 md:px-10 lg:py-0">
        <Image
          src={brand.image}
          alt="Brand Kit"
          width={500}
          height={300}
          class={"object-contain w-full"}
        />
      </div>
    </div>
    <Button href={brand.button.link}>
      {brand.button.label}

      <Icon name={"arrow-circle"} class={"-rotate-45 ml-3"} />
    </Button>
  </div>
</BrandWrapper>
