---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href} class="-rotate-45 transition-all duration-300 hover:rotate-0">
  <Icon
    name="arrow-circle"
    class={"size-10 stroke-[0.6] text-zinc-500 md:size-11"}
  />
</a>
