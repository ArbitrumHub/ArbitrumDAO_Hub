---
import { Icon } from "astro-icon/components";
import classNames from "classnames";
interface Props {
  href: string;
  className?: string;
}

const { href, className } = Astro.props;
---

<a
  href={href}
  class="-rotate-45 transition-all duration-300 hover:rotate-0 group-hover:rotate-0"
>
  <Icon
    name="arrow-circle"
    class={classNames(
      "size-10 stroke-[0.6] text-zinc-500 md:size-11",
      className,
    )}
  />
</a>
