---
import { paragraphCva, titleCva } from "@/lib/cvas";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<section
  class="not-prose flex justify-between gap-4 rounded-2xl bg-zinc-700 p-4 md:p-6 lg:rounded-small"
>
  <div class="flex max-w-sm flex-col gap-3 lg:gap-6">
    <h1
      class={titleCva({
        color: "tertiary",
      })}
    >
      {title}
    </h1>
    <p
      class={paragraphCva({
        color: "tertiary",
      })}
    >
      {description}
    </p>
  </div>
  <a href={link} target={link.startsWith("http") ? "_blank" : "_self"}>
    <div class="group flex h-full max-w-sm overflow-hidden rounded-md">
      <div class="flex flex-col justify-between bg-white p-2.5">
        <Image
          width={50}
          height={50}
          src="/favicon.svg"
          alt="Quickstart Guide"
          class="size-6 lg:size-8"
        />
        <Icon
          name="arrow-circle"
          class="size-6 -rotate-45 text-zinc-500 transition-all duration-300 ease-in-out group-hover:rotate-0 lg:size-8"
        />
      </div>
    </div>
  </a>
</section>
