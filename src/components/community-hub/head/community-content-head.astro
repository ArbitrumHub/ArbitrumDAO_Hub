---
import { communityNav } from "../../../data/links/community-hub";

import RoundedNav from "../../ui/nav/rounded-nav.astro";
const pathname = Astro.url.pathname;
---

<div class="mt-5 flex flex-col">
  <section class="flex flex-col gap-2">
    <RoundedNav
      nav={communityNav?.map((item) => {
        return {
          title: item.label ?? "",
          slug: item.slug,
          match: pathname?.split("/")?.[2] === item?.slug?.split("/")?.[2],
        };
      }) ?? []}
    />
    <div
      class="rounded-small bg-sky px-2 pt-16 md:rounded-3xl md:px-4 md:pt-20 lg:rounded-5xl lg:px-5 lg:pt-32"
    >
      <slot />
    </div>
  </section>
</div>
