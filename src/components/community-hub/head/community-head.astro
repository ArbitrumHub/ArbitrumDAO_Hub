---
interface Props {
  title?: string;
  description?: string;
  buttons?: {
    text: string;
    link: string;
    type: "default" | "secondary";
  }[];
}
import { communityNav } from "../../../data/links/community-hub";
import GradientHead from "../../ui/gradient-head.astro";
import RoundedNav from "../../ui/nav/rounded-nav.astro";
const pathname = Astro.url.pathname;

const { title, description, buttons } = Astro.props;
---

<section class="my-5 flex flex-col gap-2">
  <RoundedNav
    nav={communityNav?.map((item) => {
      return {
        title: item.label ?? "",
        slug: item.slug,
        match: pathname?.split("/")?.[2] === item?.slug?.split("/")?.[2],
      };
    }) ?? []}
  />
  <GradientHead title={title} description={description} buttons={buttons} />
</section>
