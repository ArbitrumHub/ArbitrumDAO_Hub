---
import { Image } from "astro:assets";

interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<li class="flex flex-col gap-2 rounded-[10px] bg-[#F0F9FF] p-2 md:gap-4 md:p-5">
  <Image
    width={50}
    height={50}
    src={image}
    alt={title}
    class="size-8 object-contain md:size-11"
  />
  <h2 class="text-sm font-medium md:text-base">{title}</h2>
  <p class="text-xs text-zinc-500 md:text-sm">{description}</p>
</li>
